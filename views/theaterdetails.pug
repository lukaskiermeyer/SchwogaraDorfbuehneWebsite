extends layout

block content
    .theater-detail-container
        h1= theater.Titel
        h3= theater.Jahr ? theater.Jahr : ""

        .carousel-container
            button.carousel-prev
                img(src="/images/Pfeil.svg", alt="Vorherige Folie")
            .carousel
                each bild in theater.Bilder
                    a(href=`${url}${bild.url}`, target="_blank")
                        img.carousel-slide(src=`${url}${bild.url}`)
            button.carousel-next
                img(src="/images/Pfeil.svg", alt="NÃ¤chste Folie")
        if theater.Beschreibung
            .theater-description
                each line in theater.Beschreibung.split(/\r?\n+/)
                    if line.match(/^##\s*(.*)/)
                        h3= line.replace(/^##\s*/, "")
                    else if line.trim() !== ""
                        p= line


        script(src="/js/carousel.js")




    script.
        const slides = document.querySelectorAll('.carousel-slide');
        let currentIndex = 0;

        function updateCarousel() {
            slides.forEach((slide, index) => {
                slide.style.display = index === currentIndex ? 'block' : 'none';
            });
        }

        document.querySelector('.carousel-prev').addEventListener('click', () => {
            currentIndex = (currentIndex > 0) ? currentIndex - 1 : slides.length - 1;
            updateCarousel();
        });

        document.querySelector('.carousel-next').addEventListener('click', () => {
            currentIndex = (currentIndex < slides.length - 1) ? currentIndex + 1 : 0;
            updateCarousel();
        });

        updateCarousel();
